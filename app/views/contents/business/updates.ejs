<div class="container">
    <div class="row">
        <div class="offset-md-3 col-md-6">
            <h1><%= title %></h1>

            <form class="form" method="POST">
                <input type="hidden" name="id" value="<%= business._id %>" >
                <div class="form-group">
                    <label for="nameTextField">Business Name</label>
                    <input type="text" class="form-control"
                    id="nameTextField"
                    placeholder="Enter business name"
                    name="contactName" 
                    value="<%= business.contactName %>"
                    required>
                </div>

                <div class="form-group">
                    <label for="publishedTextField">Contact Number</label>
                    <input type="text" class="form-control"
                    id="publishedTextField"
                    placeholder="Enter contact number"
                    name="contactNumber" 
                    value="<%= business.contactNumber %>"
                    required>
                </div>

                <div class="form-group">
                    <label for="priceTextField">Business Email</label>
                    <input type="number" class="form-control"
                    id="priceTextField"
                    placeholder="Enter business email"
                    name="emailAddress" 
                    value="<%= business.emailAddress %>"
                    required>
                </div>

                <button class="btn btn-primary" type="submit">
                    <i class="fas fa-edit"></i> Update</button>

                        <a href="/business-list" class="btn btn-warning">
                            <i class="fas fa-undo"></i> Delete</a>    

            </form>
        </div>

    </div>
</div>